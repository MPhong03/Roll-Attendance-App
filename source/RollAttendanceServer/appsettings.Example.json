{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "ITPDatabase": "Server=Your_Server_Name;Database=Database_Name;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "your_secret_key", // MUST BE 32 CHARACTERS or LONGER
    "Issuer": "Issuer",
    "Audience": "Audience",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Cloudinary": {
    "CloudName": "cloud_name",
    "ApiKey": "cloud_api_key",
    "ApiSecret": "cloud_secret"
  },
  "Firebase": {
    "CredentialsPath": "path/to/your/firebase-service-account.json"
  },
  "AllowedHosts": "*"
}
